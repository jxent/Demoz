<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.demoz.j">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme"
        android:name=".base.BaseApplication">
        <activity
            android:name=".app.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".base.DetailActivity"
            android:label="@string/app_detail"
            android:parentActivityName=".app.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.MainActivity" />
        </activity>
        <activity
            android:name=".demoactivity.HugeImageViewActivity"
            android:label="@string/huge_image_show"
            android:parentActivityName=".app.MainActivity">
        </activity>
        <!--background service-->
        <service android:name="com.wj.servicelibrary.server.WebService">

        </service>
    </application>

</manifest>
